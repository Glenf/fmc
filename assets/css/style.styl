// Variables

c1 = #D0DBED
c2 = #38AD9E

body = #d0dbed
text-color = #012D3D
box-color = #FFEB9E
link-color = lighten(text-color, 10)


*
    box-sizing border-box

html
body
    padding 0
    margin 0

// Mixins

    

html
    background-color c1
    font-size 100%
    color text-color

body
    font-size 1em

.banner
    width 100%
    background-color c2
    padding 1em
    text-align center
    margin-bottom 1em

.site-title
    color #fff
    font-weight 2em
    line-height 1
    text-transform uppercase

.content
    max-width 1080px
    width 90%
    margin 0 auto


label
    display block

input
select
    font-size 1rem
    width 100%
    padding .4em .5em
    border none
    border-radius 3px
    margin-bottom .8em

label
    font-weight 700
    font-size 1.2rem

.row
    border-radius 3px
    background-color #fff
    background-color rgba(255,255,255,.6)
    margin-bottom 1em
    padding .5em 1em 1em

.block
    float left
    width 50%
    padding 0 2em

.results
    border-radius 3px
    background-color box-color
    margin-bottom 2em

.result
    float left
    width 33%
    padding 1em 2em
    text-align center

    .title
        font-weight 700

    .value
        font-size 2rem
        font-weight bold
        border-radius 2px
        padding .5em
        background-color #bbb
        box-shadow inset 0 0 5px 1px rgba(0,0,0,.2)

    .disclaimer
        font-size .8rem
        color #333

.site-info
    padding  .4em
    background-color c2
    text-align center

a
    color link-color

// Helpers
.cf
    zoom 1
    &:after
    &:before
        content " "
        display table
    &:after
        clear both
