// Variables

c1 = #D0DBED
c2 = #38AD9E

body = #d0dbed
text-color = #012D3D
box-color = #FFEB9E
link-color = lighten(text-color, 10)


*
  box-sizing border-box

html
body
  padding 0
  margin 0

// Mixins



html
  background-color c1
  font-size 100%
  color text-color
  font-family Helvetica Neue, Helvetica, Arial, sans-serif

body
  font-size 1em

.banner
  width 100%
  background-color c2
  padding 1em
  text-align center
  margin-bottom 1em

.site-title
  color #fff
  font-weight 700
  line-height 1
  text-transform uppercase

.content
  max-width 1080px
  width 100%
  margin 0 auto

  @media screen and (min-width : 600px)
    width 90%



label
  display block

input
select
output
  font-size 1rem
  width 100%
  padding .4em .5em
  border-radius 3px
  margin-bottom .8em
  border 1px solid link-color

output
  display block
  background-color #fefefe
  text-align center
  font-size 1.5rem
  font-weight 700

label
  font-weight 700
  font-size 1.2rem

.row
  border-radius 3px
  background-color #fff
  background-color rgba(255,255,255,.6)
  margin-bottom 1em
  padding .5em 0 1em

  h2
    text-align center
    padding .2em

.block
  padding 0 .5em

  @media screen and (min-width : 520px)
    float left
    width 50%
    padding-left 1em
    padding-right 1em


.results
  border-radius 3px
  background-color box-color
  margin-bottom 2em

.result
  padding .5em .5em 0
  text-align center

  .title
    font-weight 700

    @media screen and (min-width : 520px)
      height 2em

    @media screen and (min-width : 750px)
      height 1em

  .value
    font-size 2rem
    font-weight bold
    border-radius 2px
    padding .5em
    background-color #bbb
    box-shadow inset 0 0 5px 1px rgba(0,0,0,.2)

  .disclaimer
    font-size .8rem
    color #333

  @media screen and (min-width : 520px)
    float left
    width 33%

.site-info
  padding  .4em 2em
  background-color c2
  text-align center

a
  color link-color

// Helpers
.cf
  zoom 1
  &:after
  &:before
   content " "
   display table
  &:after
    clear both